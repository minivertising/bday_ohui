<div class="row-fluid">
  <!-- block -->
  <div class="block">
    <div class="navbar navbar-inner block-header">
      <div class="muted pull-left">주간 채널별 신청자 목록</div>
    </div>
    <div class="row-fluid span11">
      <p class="total_user_header"><주간 채널별 신청자 현황></p>
      <table cellpadding="0" cellspacing="0" border="0" class="table table-striped table-bordered traffic-logs">
        <thead>
          <tr>
            <th>채널</th>
            <% if params[:id].to_i == 1 %>
              <th class="sun"><%= days_helper(0)%></th>
              <th class="mon"><%= (DateTime.now-DateTime.now.wday+1).beginning_of_day.strftime('%Y-%m-%d') %> (월)</th>
              <th class="tue"><%= (DateTime.now-DateTime.now.wday+2).beginning_of_day.strftime('%Y-%m-%d') %> (화)</th>
              <th class="wed"><%= (DateTime.now-DateTime.now.wday+3).beginning_of_day.strftime('%Y-%m-%d') %> (수)</th>
  						<th class="thu"><%= (DateTime.now-DateTime.now.wday+4).beginning_of_day.strftime('%Y-%m-%d') %> (목)</th>
              <th class="fri"><%= (DateTime.now-DateTime.now.wday+5).beginning_of_day.strftime('%Y-%m-%d') %> (금)</th>
              <th class="sat"><%= (DateTime.now-DateTime.now.wday+6).beginning_of_day.strftime('%Y-%m-%d') %> (토)</th>
            <% else %>
              <th class="sun"><%= (DateTime.now-DateTime.now.wday-7*(params[:id].to_i-1)).beginning_of_day.strftime('%Y-%m-%d') %> (일)</th>
              <th class="mon"><%= (DateTime.now-DateTime.now.wday-6*(params[:id].to_i-1)).beginning_of_day.strftime('%Y-%m-%d') %> (월)</th>
              <th class="tue"><%= (DateTime.now-DateTime.now.wday-5*(params[:id].to_i-1)).beginning_of_day.strftime('%Y-%m-%d') %> (화)</th>
              <th class="wed"><%= (DateTime.now-DateTime.now.wday-4*(params[:id].to_i-1)).beginning_of_day.strftime('%Y-%m-%d') %> (수)</th>
  						<th class="thu"><%= (DateTime.now-DateTime.now.wday-3*(params[:id].to_i-1)).beginning_of_day.strftime('%Y-%m-%d') %> (목)</th>
              <th class="fri"><%= (DateTime.now-DateTime.now.wday-2*(params[:id].to_i-1)).beginning_of_day.strftime('%Y-%m-%d') %> (금)</th>
              <th class="sat"><%= (DateTime.now-DateTime.now.wday-1*(params[:id].to_i-1)).beginning_of_day.strftime('%Y-%m-%d') %> (토)</th>
            <% end %>
          </tr>
        </thead>
        <tbody>
           <% @user_stats.each do |user| %>
							 <tr>
       						 <td>
       							 <span><%=user.source%></span>  
       						 </td> 
       						 <td class="sun">
       							 <span><%=user.sun%></span>  
       						 </td>
       						 <td class="mon">
       							 <span><%=user.mon%></span>  
       						 </td>
       						 <td class="tue">
       							 <span><%=user.tue %></span>  
       						 </td>
       						 <td class="wed">
       							 <span><%=user.wed %></span>  
       						 </td>
       						 <td class="thu">
       							 <span><%=user.thu%></span>  
       						 </td>
       						 <td class="fri">
       							 <span><%=user.fri%></span>  
       						 </td>
       						 <td class="sat">
       							 <span><%=user.sat%></span>  
       						 </td>
       					 </tr>
            <% end %> 
            <% @user_stats_sum.each do |user| %>
 							 <tr>
        						 <td>
        							 <span>합계</span>  
        						 </td> 
        						 <td class="sun">
        							 <span><%=user.sun%></span>  
        						 </td>
        						 <td class="mon">
        							 <span><%=user.mon%></span>  
        						 </td>
        						 <td class="tue">
        							 <span><%=user.tue %></span>  
        						 </td>
        						 <td class="wed">
        							 <span><%=user.wed %></span>  
        						 </td>
        						 <td class="thu">
        							 <span><%=user.thu%></span>  
        						 </td>
        						 <td class="fri">
        							 <span><%=user.fri%></span>  
        						 </td>
        						 <td class="sat">
        							 <span><%=user.sat%></span>  
        						 </td>
        					 </tr>
             <% end %>       
        </tbody>
      </table>
      <% @user_first_day.each do |t| %>
        <% if t.created_at >= (DateTime.now-DateTime.now.wday-7*(params[:id].to_i-1)).beginning_of_day and t.created_at <= (DateTime.now-DateTime.now.wday-1*(params[:id].to_i-1)).beginning_of_day  %>
          <%= week_paginate_next(params[:id].to_i,"logs_admin_user_path")%>
        <% elsif params[:id].to_i == 1 %>
          <%= week_paginate_prev(params[:id],"logs_admin_user_path")%>
        <% else %>
          <%= week_paginate_prev(params[:id].to_i,"logs_admin_user_path")%>
          <%= week_paginate_next(params[:id].to_i,"logs_admin_user_path")%>
        <% end %>
      <% end %>
    </div>
     
    <div class="row-fluid block-content collapse in">

    </div>
  </div>
  <!-- /block -->
</div>
